                  </button>
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModalMessagePersonal" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalMessageTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title" id="exampleModalLabel"
                            style="text-align: center; text-transform: uppercase;">Edit Personal Information</h4>
                        </div>
                        <div class="modal-body">
                          {{#if message}}
                          <div class="alert {{messageClass}}" role="alert">
                            {{message}}
                          </div>
                          {{/if}}
                          <form action="/auth/admin_updatePersonalInfo" method="POST">
                            <div class="form-group">
                              <label for="message-text" class="col-form-label">Contact</label>
                              <input type="tel" placeholder="40-(770)-888-444" class="form-control" name="contact"
                                id="contact" required>
                            </div>
                            <div class="form-group">
                              <label for="message-text" class="col-form-label">Email</label>
                              <input type="email" class="form-control" placeholder="name@example.com" name="email"
                                id="email" required>
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn bg-gradient-primary" id="btnGen">Edit</button>
                              <button type="button" class="btn bg-gradient-secondary"
                                data-dismiss="modal">Close</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body p-3">
              <hr class="horizontal gray-light my-4">
              <ul class="list-group">
                {{#each Data}}
                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Name:</strong> &nbsp;
                  {{this.fname}} {{this.lname}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Mobile:</strong> &nbsp;
                  {{this.contact}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp;
                  {{this.email}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
        <div class="col-12 col-xl-4">
          <div class="card h-100">
            <div class="card-header pb-0 p-3">
              <h6 class="mb-0">Work status</h6>
            </div>
            <div class="card-body p-3">
              <h6 class="text-uppercase text-body text-xs font-weight-bolder">Account</h6>
              <ul class="list-group">
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault" checked>
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault">Work From home</label>
                  </div>
                </li>
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault1">
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault1">Sick</label>
                  </div>
                </li>
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault2" checked>
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault2">Family Time</label>
                  </div>
                </li>
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault2" checked>
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault2">Out of Station</label>
                  </div>
                </li>
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault2" checked>
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault2">At work</label>
                  </div>
                </li>
              </ul>
              <h6 class="text-uppercase text-body text-xs font-weight-bolder mt-4">Do not Disturb</h6>
              <ul class="list-group">
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault3">
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault3">On</label>
                  </div>
                </li>
                <li class="list-group-item border-0 px-0">
                  <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault4" checked>
                    <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                      for="flexSwitchCheckDefault4">Off</label>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="card mt-4">
        <div class="card-header pb-0">
          <div class="row">
            <div class="col-lg-6 col-7">
              <h6>Events</h6>
            </div>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
          <div class="table-responsive">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                    style="padding-left:65px; width:11%;">Event title</th>
                  <th class="text-uppercase text-center text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                    style="width:2%;">Date</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                    style="width:5%;">Time
                  </th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                    style="width:10%;">Location
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each Events}}
                <tr>
                  <td>
                    <div class="d-flex px-2 py-1">
                      <div>
                        <i class="fas fa-calendar-day"></i>
                      </div>
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-3 text-sm" style="padding-left: 24px;">{{this.event_name}}</h6>
                      </div>
                    </div>
                  </td>
                  <td class="align-middle text-center text-sm">
                    <span class="text-xs text-center font-weight-bold">{{this.date}}</span>
                  </td>
                  <td class="align-middle text-center text-sm">
                    <span class="text-xs text-center font-weight-bold">{{this.time}}</span>
                  </td>
                  <td class="align-middle text-center text-sm">
                    <span class="text-xs text-center font-weight-bold">{{this.location}}</span>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

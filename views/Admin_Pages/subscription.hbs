                  <i class="sidenav-toggler-line"></i>
                </div>
              </a>
            </li>
            <!-- End Responsive hamburger lines -->
            <li class="nav-item px-3 d-flex align-items-center">
            </li>
            <li class="nav-item dropdown pe-2 d-flex align-items-center">
              <a href="/" class="nav-link text-body p-0" data-bs-toggle="tooltip" data-bs-placement="top"
                title="Log out">
                <i class="fa fa-sign-out cursor-pointer"></i>
              </a>
            </li>
          </ul>
          <!-- End list of elements -->
        </div>
        <!-- End Right Navbar -->
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="page-header min-height-300 border-radius-xl mt-1"
        style="background-image: url('../public/images/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
      </div>
      <div class="row mt-4">
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-md-10 d-flex align-items-center">
                  <h6 class="mb-0">Subscription Details</h6>
                </div>
                <div class="col-md-2 " style="padding-left:36px;">
                  <button type="button" class="btn btn-block btn-default mb-3" data-toggle="modal"
                    data-target="#exampleModalMessage"><i class="fas fa-user-edit text-secondary text-sm "
                      data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i></button>
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModalMessage" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalMessageTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title" id="exampleModalLabel"
                            style="text-align: center; text-transform: uppercase;">Update Subscription Plan</h4>
                        </div>
                        <div class="modal-body">
                          {{#if message}}
                          <div class="alert {{messageClass}}" role="alert">
                            {{message}}
                          </div>
                          {{/if}}
                          <form action="/auth/admin_subscription" method="POST">
                            <div class="form-group">
                              <label for="recipient-name" class="col-form-label">Plan Name</label>
                              <select class="form-control" placeholder="Plan name" name="plan_name" id="plan_name"
                                required>
                                <option selected="">Select plan</option>
                                <option>Basic</option>
                                <option>Standard</option>
                                <option>Premium</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="message-text" class="col-form-label">Plan Duration</label>
                              <select class="form-control" placeholder="Departure" name="plan_duration"
                                id="plan_duration" required>
                                <option selected="">Select duration</option>
                                <option>1 month</option>
                                <option>6 months</option>
                                <option> 1 year</option>
                                <option> 2 years</option>
                                <option> 5 years</option>
                              </select>
                            </div>
                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="message-text" class="col-form-label">Start Date</label>
                                  <input class="form-control" type="text" onfocus="(this.type='date')"
                                    placeholder="Select start date" name="start_date" id="start_date" required>
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="message-text" class="col-form-label">End Date</label>
                                  <input class="form-control" type="text" onfocus="(this.type='date')"
                                    placeholder="Select end date" name="end_date" id="end_date" required>
                                </div>
                              </div>
                            </div>
                            <div class="form-group">
                              <label for="message-text" class="col-form-label">Amount</label>
                              <input class="form-control" type="text" placeholder="10000 (in Rs.)" name="amount"
                                id="amount" required>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn bg-gradient-secondary">Proceed Payment</button>
                              <button type="submit" class="btn bg-gradient-primary" id="btnGen">Update</button>
                              <button type="button" class="btn bg-gradient-secondary"
                                data-dismiss="modal">Close</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body p-3">
              <hr class="horizontal gray-light my-4">
              <ul class="list-group">
                {{#each Plans}}
                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Plan Name:</strong>
                  &nbsp; {{this.plan_name}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Plan Duration:</strong>
                  &nbsp; {{this.plan_duration}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Start Date:</strong> &nbsp;
                  {{this.start_date}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">End Date:</strong> &nbsp;
                  {{this.end_date}}</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Amount:</strong> &nbsp;
                  {{this.amount}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card h-100 mb-4">
            <div class="card-header pb-0 px-3">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="mb-0">Your Transaction's</h6>
                </div>
              </div>
            </div>
            <div class="card-body pt-4 p-3">
              <ul class="list-group">
                {{#each log}}
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <button
                      class="btn btn-icon-only btn-rounded  mb-0 me-3 btn-sm d-flex align-items-center justify-content-center"><i
                        class="fas fa-money-check"></i></button>
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">{{this.plan_name}}</h6>
                      <span class="text-xs">{{this.start_date}} - {{this.end_date}}</span>
                    </div>
                  </div>
                  <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold">
                    Rs. {{this.amount}}
                  </div>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <!--   Core JS Files   -->
  <script src="../public/js/popper.min.js"></script>
  <script src="../public/js/bootstrap.min.js"></script>
  <script src="../public/js/smooth-scrollbar.min.js"></script>
  <script src="../public/js/soft-ui-dashboard.min.js?v=1.0.1"></script>
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <script>
    var plan = document.getElementById('plan_name');
    var duration = document.getElementById('plan_duration');
    var start = document.getElementById('start_date');
    var end = document.getElementById('end_date');
    var bill = document.getElementById('amount');

    start.onchange = function () {
      if (duration.value == "1 month") {
        var nbdays = 30

      } else if (duration.value == "6 months") {
        var nbdays = 180

      } else if (duration.value == "1 year") {
        var nbdays = 360

      } else if (duration.value == "2 years") {
        var nbdays = 720
      } else {
        var nbdays = 1800
      }
      var startDt = start.value;
      var dat = new Date(startDt);
      dat.setDate(dat.getDate() + nbDays)
      end.value(dat)

      if (plan.value == "Basic") {
        var amnt = 20 * int(nbdays)
        bill.value = amnt.value
      }
      else if (plan.value == "Premium") {
        var amnt = 90 * int(nbdays)
        bill.value = amnt.value
      } else {
        var amnt = 190 * int(nbdays)
        bill.value = amnt.value
      }
    }
  </script>

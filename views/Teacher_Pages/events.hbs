        </li>
        <li class="nav-item">
          <a class="nav-link  " href="/teacher_calendar">
            <div
              class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
              <img src="../public/images/calendar-black.png">
            </div>
            <span class="nav-link-text ms-1">Event Calendar</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link  " href="/teacher_announcement">
            <div
              class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
              <img src="../public/images/announcement-black.png">
            </div>
            <span class="nav-link-text ms-1">Announcement</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link  active" href="/teacher_events">
            <div
              class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
              <img src="../public/images/events-white.png">
            </div>
            <span class="nav-link-text ms-1">Events</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link  " href="/teacher_groups">
            <div
              class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
              <img src="../public/images/groups-black.png">
            </div>
            <span class="nav-link-text ms-1">Groups</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link  " href="/teacher_student">
            <div
              class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
              <img src="../public/images/student-black.png">
            </div>
            <span class="nav-link-text ms-1">Student</span>
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <main class="main-content mt-1 border-radius-lg">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
      navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <!-- Left Navbar -->
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Event-list</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">Events</h6>
        </nav>
        <!-- End Left Navbar -->
        <!-- Right Navbar -->
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center"></div>
          <!-- list of elements -->
          <ul class="navbar-nav  justify-content-end">
            <!-- Profile -->
            <li class="nav-item d-flex align-items-center">
              <a href="/teacher_profile" class="nav-link text-body font-weight-bold px-0">
                <i class="fa fa-user me-sm-1"></i>
                {{#each Data}}
                <span class="d-sm-inline d-none">{{this.username}}</span>
                {{/each}}
              </a>
            </li>
            <!-- End Profile -->
            <!-- Responsive hamburger lines -->
            <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </a>
            </li>
            <!-- End Responsive hamburger lines -->
            <li class="nav-item px-3 d-flex align-items-center">
            </li>
            <li class="nav-item dropdown pe-2 d-flex align-items-center">
              <a href="/" class="nav-link text-body p-0" data-bs-toggle="tooltip" data-bs-placement="top"
                title="Log out">
                <i class="fa fa-sign-out cursor-pointer"></i>
              </a>
            </li>
          </ul>
          <!-- End list of elements -->
        </div>
        <!-- End Right Navbar -->
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="page-header min-height-300 border-radius-xl mt-1"
        style="background-image: url('../public/images/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
      </div>
      <button class="btn btn-icon btn-3 btn-primary mt-4" type="button" data-toggle="modal"
        data-target="#exampleModalMessage" style="margin-left: 635px;">
        <span class="btn-inner--icon"><i class="fas fa-plus me-1"></i></span>
        <span class="btn-inner--text"> Create new event</span>
      </button>
      <!-- Modal -->
      <div class="modal fade" id="exampleModalMessage" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalMessageTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-modal-dialog-centered" role="document">
          <div class="modal-content" style="width:800px;">
            <div class="modal-header">
              <h4 class="modal-title" id="exampleModalLabel" style="text-align: center; text-transform: uppercase;">
                Create a new event</h4>
              {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button> --}}
            </div>
            <div class="modal-body">
              {{#if message}}
              <div class="alert {{messageClass}}" role="alert">
                {{message}}
              </div>
              {{/if}}
              <form action="/auth/teacher_events" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Event Name</label>
                  <input type="text" class="form-control" placeholder="Event name" name="event_name" id="event_name"
                    required>
                </div>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">Description</label>
                  <textarea class="form-control" placeholder="Type here .." name="description" id="description"
                    required></textarea>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">Date</label>
                      <input class="form-control" type="text" onfocus="(this.type='date')" name="event_date"
                        id="event_date" placeholder="Please select date" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">Time</label>
                      <input class="form-control" type="time" placeholder="Please select time" onfocus="focused(this)"
                        onfocusout="defocused(this)" name="event_time" id="event_time" required>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">Location</label>
                  <textarea class="form-control" placeholder="Type here.." name="location" id="location"
                    required></textarea>
                </div>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">Organizing committee</label>
                  <input type="text" class="form-control" placeholder="Organizing committee" name="committee"
                    id="committee">
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">Student co-ordinator</label>
                      <input type="text" class="form-control" placeholder="Student co-ordinator"
                        name="student_coordinator" id="student_coordinator" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">Staff co-ordinator</label>
                      <input type="text" class="form-control" placeholder="Staff co-ordinator" name="staff_coordinator"
                        id="staff_coordinator" required>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">Any Docs</label>
                  <input type="file" class="form-control" id="myFile" name="filename" accept="file/*">
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn bg-gradient-primary" id="btnGen">
                    Create event
                  </button>
                  <button type="button" class="btn bg-gradient-secondary" data-dismiss="modal">Close</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{#each Events}}
      <div class="card" style="margin-left: 183px; margin-right: 254px;">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-lg-6">
              <div class="d-flex flex-column h-100">
                <p class="mb-1 pt-2 text-bold">{{this.committee}}</p>
                <h5 class="font-weight-bolder">{{this.event_name}}</h5>
                <p class="mb-5">{{this.description}}</p>
                <form action="/auth/teacher_event_id" method="POST">
                  <div class="form-group">
                    <input type="hidden" class="form-control" name="e_id" id="e_id" value="{{this.event_id}}">
                  </div>
                  <button class="btn btn-default" type="submit">Read More</button>
                  <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                </form>
              </div>
            </div>
            <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
              <div class="bg-gradient-primary border-radius-lg h-100">
                <img src="/uploads/{{this.poster}}" class="position-absolute h-100 w-50 top-0 d-lg-block d-none">
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
      {{/each}}

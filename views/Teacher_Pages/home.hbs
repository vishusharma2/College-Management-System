  <style>
    /* Remove margins and padding from the list */
    .todo-list-items ul {
      margin: 0;
      padding: 0;
    }

    /* Style the list items */
    .todo-list-items ul li {
      cursor: pointer;
      position: relative;
      padding: 12px 8px 12px 40px;
      list-style-type: none;
      background: #fff;
      font-size: 18px;
      transition: 0.2s;
      /* make the list items unselectable */
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    div.card shadow-lg {
      width: 110px;
      height: 110px;
      overflow: scroll;
    }

    /* Set all odd list items to a different color (zebra-stripes) */
    .todo-list-items ul li.list-todo:nth-child(odd) {
      background: #fff;
    }

    /* Darker background-color on hover */
    .todo-list-items ul li.list-todo:hover {
      background: #ddd;
    }

    /* When clicked on, add a background color and strike out text */
    .todo-list-items ul li.checked-todo {
      background: #888;
      color: rgb(160, 42, 42);
      text-decoration: line-through;
    }

    /* Add a "checked" mark when clicked on */
    .todo-list-items ul li.list-todo.checked-todo::before {
      content: '';
      position: absolute;
      border-color: #fff;
      border-style: solid;
      border-width: 0 2px 2px 0;
      top: 10px;
      left: 16px;
      transform: rotate(45deg);
      height: 15px;
      width: 7px;
    }

    /* Style the close button */
    .close-todo {
      position: absolute;
      right: 0;
      top: 0;
      padding: 12px 16px 12px 16px;
    }

    .close-todo:hover {
      background-color: #c32fd6;
      color: white;
    }

    /* Style the header */
    .header-todo {
      background-color: #fff;
      padding: 30px 40px;
      color: white;
      text-align: center;
    }

    /* Clear floats after the header */
    .header-todo:after {
      content: "";
      display: table;
      clear: both;
    }

    /* Style the input */
    input {
      margin: 0;
      border: none;
      border-color: #bbb;
      border-radius: 0;
      width: 75%;
      padding: 10px;
      float: left;
      font-size: 16px;
    }

    /* Style the "Add" button */
    .addBtn-todo {
      padding: 10px;
      width: 25%;
      background: #c32fd6;
      color: #fff;
      float: left;
      text-align: center;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
      border-radius: 0;
    }

    .addBtn-todo:hover {
      background-color: #bbb;
    }

    .announcement-navbar {
      overflow-y: scroll;
    }
  </style>
